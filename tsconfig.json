{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "ES2015",
        "target": "es2018",
        // "skipLibCheck": true,
        // "noImplicitAny": false,
        // "jsx": "react",
        "allowJs": true,
        // "moduleResolution": "node",
        // "baseUrl": "./",
        // "outDir": "./dist/out-tsc",
        "sourceMap": false,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        // "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        // "target": "es5",
        "lib": [
            "es5",
            "es2018",
            "dom"
        ],
        "resolveJsonModule": true,
        "baseUrl": "./", // This must be specified if "paths" is.
        "paths": {
            "@root/*": [
                "src/*"
            ],
            "@assets/*": [
                "assets/*"
            ],
            "@config/*": [
                "src/_config/*"
            ],
            "@environment/*": [
                "src/environments/*"
            ]
        },
    },
    "include": [
        "src/**/*.ts"
    ],
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}